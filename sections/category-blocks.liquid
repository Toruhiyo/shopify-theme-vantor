<section class="vantor-section">
  <div class="page-width">
    <h2>{{ section.settings.heading }}</h2>
    <div class="vantor-grid category-grid vantor-fade" style="margin-top: 1rem;">
      {% for block in section.blocks %}
        <a class="vantor-card category-card" href="{{ block.settings.link }}" {{ block.shopify_attributes }}>
          {% if block.settings.image != blank %}
            {{
              block.settings.image
              | image_url: width: 960
              | image_tag: widths: '360, 540, 720, 960', sizes: '(min-width: 990px) 25vw, 100vw', loading: 'lazy'
            }}
          {% endif %}
          <div class="category-card__overlay">
            <h3 class="category-card__title">{{ block.settings.title }}</h3>
          </div>
        </a>
      {% endfor %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Category blocks",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "SHOP BY SYSTEM"
    }
  ],
  "blocks": [
    {
      "type": "category",
      "name": "Category block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "HEADSETS"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Category blocks",
      "blocks": [
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        },
        {
          "type": "category"
        }
      ]
    }
  ]
}
{% endschema %}
