<div class="feature-strip">
  <div class="page-width">
    <div class="feature-strip__grid">
      {%- for block in section.blocks -%}
        <div class="feature-strip__item" {{ block.shopify_attributes }}>
          {%- if block.settings.icon != 'none' -%}
            <div class="feature-strip__icon">
              {%- case block.settings.icon -%}
                {%- when 'shipping' -%}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="1" y="3" width="15" height="13"/><polygon points="16 8 20 8 23 11 23 16 16 16 16 8"/><circle cx="5.5" cy="18.5" r="2.5"/><circle cx="18.5" cy="18.5" r="2.5"/></svg>
                {%- when 'shield' -%}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
                {%- when 'star' -%}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
                {%- when 'check' -%}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
                {%- when 'headphones' -%}
                  <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M3 18v-6a9 9 0 0 1 18 0v6"/><path d="M21 19a2 2 0 0 1-2 2h-1a2 2 0 0 1-2-2v-3a2 2 0 0 1 2-2h3zM3 19a2 2 0 0 0 2 2h1a2 2 0 0 0 2-2v-3a2 2 0 0 0-2-2H3z"/></svg>
              {%- endcase -%}
            </div>
          {%- endif -%}
          <span class="feature-strip__text">{{ block.settings.text }}</span>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Feature strip",
  "tag": "section",
  "class": "feature-strip-section",
  "settings": [],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "select",
          "id": "icon",
          "label": "Icon",
          "options": [
            { "value": "none", "label": "None" },
            { "value": "shipping", "label": "Shipping" },
            { "value": "shield", "label": "Shield" },
            { "value": "star", "label": "Star" },
            { "value": "check", "label": "Check" },
            { "value": "headphones", "label": "Headphones" }
          ],
          "default": "shipping"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Text",
          "default": "Free Shipping"
        }
      ]
    }
  ],
  "max_blocks": 5,
  "presets": [
    {
      "name": "Feature strip",
      "blocks": [
        { "type": "feature", "settings": { "icon": "shipping", "text": "Free Shipping" } },
        { "type": "feature", "settings": { "icon": "shield", "text": "2-Year Warranty" } },
        { "type": "feature", "settings": { "icon": "star", "text": "Top Rated" } },
        { "type": "feature", "settings": { "icon": "headphones", "text": "24/7 Support" } }
      ]
    }
  ]
}
{% endschema %}
