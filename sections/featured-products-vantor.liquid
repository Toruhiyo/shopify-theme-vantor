<section class="vantor-section">
  <div class="page-width">
    <h2>{{ section.settings.heading }}</h2>
    <div class="vantor-grid featured-grid vantor-fade" style="margin-top: 1rem;">
      {% if section.settings.collection != blank %}
        {% for product in section.settings.collection.products limit: section.settings.products_to_show %}
          {% render 'product-card', card_product: product, show_quick_add: section.settings.quick_add %}
        {% endfor %}
      {% else %}
        {% for i in (1..4) %}
          <article class="vantor-card product-card">
            <div class="product-card__media"></div>
            <div class="product-card__info">
              <p class="product-card__title">PRODUCT {{ i }}</p>
              <p class="product-card__price">{{ 99 | money }}</p>
            </div>
          </article>
        {% endfor %}
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Featured products Vantor",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "ENGINEERED PICKS"
    },
    {
      "type": "collection",
      "id": "collection",
      "label": "Collection"
    },
    {
      "type": "range",
      "id": "products_to_show",
      "min": 4,
      "max": 12,
      "step": 1,
      "default": 8,
      "label": "Products to show"
    },
    {
      "type": "checkbox",
      "id": "quick_add",
      "label": "Enable quick add",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Featured products Vantor"
    }
  ]
}
{% endschema %}
