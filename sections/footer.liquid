<footer class="footer section-spacing">
  <div class="page-width">
    <div class="footer__grid">
      {%- for block in section.blocks -%}
        {%- case block.type -%}

          {%- when 'menu' -%}
            <div class="footer__column" {{ block.shopify_attributes }}>
              <h4 class="footer__heading">{{ block.settings.heading }}</h4>
              {%- if block.settings.menu != blank -%}
                {%- for link in block.settings.menu.links -%}
                  <a href="{{ link.url }}" class="footer__link">{{ link.title }}</a>
                {%- endfor -%}
              {%- endif -%}
            </div>

          {%- when 'text' -%}
            <div class="footer__column" {{ block.shopify_attributes }}>
              <h4 class="footer__heading">{{ block.settings.heading }}</h4>
              <p class="footer__link" style="cursor: default;">{{ block.settings.text }}</p>
            </div>

          {%- when 'newsletter' -%}
            <div class="footer__column" {{ block.shopify_attributes }}>
              <h4 class="footer__heading">{{ block.settings.heading }}</h4>
              <p class="footer__link" style="cursor: default; margin-bottom: 0.75rem;">{{ block.settings.text }}</p>
              {% form 'customer', id: 'footer-newsletter' %}
                <div class="newsletter__form">
                  <input
                    type="email"
                    name="contact[email]"
                    class="input"
                    placeholder="{{ 'footer.email_placeholder' | t }}"
                    required
                    autocomplete="email"
                    aria-label="{{ 'footer.email_placeholder' | t }}"
                  >
                  <input type="hidden" name="contact[tags]" value="newsletter">
                  <button type="submit" class="btn btn--primary btn--sm">{{ 'footer.subscribe' | t }}</button>
                </div>
              {% endform %}
            </div>

        {%- endcase -%}
      {%- endfor -%}
    </div>

    {%- comment -%} Trust Row {%- endcomment -%}
    {%- if section.settings.show_trust_row -%}
      <div class="trust-row">
        <div class="trust-row__item">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>
          {{ 'footer.secure_checkout' | t }}
        </div>
        <div class="trust-row__item">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
          {{ 'footer.free_shipping' | t }}
        </div>
        <div class="trust-row__item">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="23 4 23 10 17 10"/><polyline points="1 20 1 14 7 14"/><path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"/></svg>
          {{ 'footer.easy_returns' | t }}
        </div>
        <div class="trust-row__item">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>
          {{ 'footer.warranty' | t }}
        </div>
      </div>
    {%- endif -%}

    {%- comment -%} Bottom Bar {%- endcomment -%}
    <div class="footer__bottom">
      <p>&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. {{ 'footer.rights' | t }}</p>

      <div class="footer__social">
        {%- if settings.social_twitter != blank -%}
          <a href="{{ settings.social_twitter }}" target="_blank" rel="noopener" aria-label="X (Twitter)">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/></svg>
          </a>
        {%- endif -%}
        {%- if settings.social_instagram != blank -%}
          <a href="{{ settings.social_instagram }}" target="_blank" rel="noopener" aria-label="Instagram">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/></svg>
          </a>
        {%- endif -%}
        {%- if settings.social_youtube != blank -%}
          <a href="{{ settings.social_youtube }}" target="_blank" rel="noopener" aria-label="YouTube">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22.54 6.42a2.78 2.78 0 0 0-1.94-2C18.88 4 12 4 12 4s-6.88 0-8.6.46a2.78 2.78 0 0 0-1.94 2A29 29 0 0 0 1 11.75a29 29 0 0 0 .46 5.33A2.78 2.78 0 0 0 3.4 19.1c1.72.46 8.6.46 8.6.46s6.88 0 8.6-.46a2.78 2.78 0 0 0 1.94-2 29 29 0 0 0 .46-5.25 29 29 0 0 0-.46-5.33z"/><polygon points="9.75 15.02 15.5 11.75 9.75 8.48 9.75 15.02"/></svg>
          </a>
        {%- endif -%}
        {%- if settings.social_twitch != blank -%}
          <a href="{{ settings.social_twitch }}" target="_blank" rel="noopener" aria-label="Twitch">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M11.571 4.714h1.715v5.143H11.57zm4.715 0H18v5.143h-1.714zM6 0L1.714 4.286v15.428h5.143V24l4.286-4.286h3.428L22.286 12V0zm14.571 11.143l-3.428 3.428h-3.429l-3 3v-3H6.857V1.714h13.714z"/></svg>
          </a>
        {%- endif -%}
        {%- if settings.social_discord != blank -%}
          <a href="{{ settings.social_discord }}" target="_blank" rel="noopener" aria-label="Discord">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028c.462-.63.874-1.295 1.226-1.994a.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/></svg>
          </a>
        {%- endif -%}
        {%- if settings.social_tiktok != blank -%}
          <a href="{{ settings.social_tiktok }}" target="_blank" rel="noopener" aria-label="TikTok">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor"><path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-2.88 2.5 2.89 2.89 0 0 1-2.89-2.89 2.89 2.89 0 0 1 2.89-2.89c.28 0 .54.04.79.1v-3.5a6.37 6.37 0 0 0-.79-.05A6.34 6.34 0 0 0 3.15 15a6.34 6.34 0 0 0 10.86 4.49V12.8a8.16 8.16 0 0 0 4.77 1.52h.8V10.9a4.83 4.83 0 0 1-.99-4.21z"/></svg>
          </a>
        {%- endif -%}
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "tag": "div",
  "class": "footer-section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_trust_row",
      "label": "Show trust row",
      "default": true
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu column",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Quick links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text column",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "About"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Premium gaming gear and peripherals for competitive players.</p>"
        }
      ]
    },
    {
      "type": "newsletter",
      "name": "Newsletter",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Stay in the loop"
        },
        {
          "type": "text",
          "id": "text",
          "label": "Description",
          "default": "Get drops, deals, and new gear first."
        }
      ]
    }
  ],
  "max_blocks": 5,
  "presets": [
    {
      "name": "Footer",
      "blocks": [
        { "type": "menu" },
        { "type": "menu" },
        { "type": "text" },
        { "type": "newsletter" }
      ]
    }
  ]
}
{% endschema %}
