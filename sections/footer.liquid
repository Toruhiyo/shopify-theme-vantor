<footer class="site-footer">
  <div class="page-width site-footer__inner">
    <p class="site-footer__text">{{ section.settings.tagline }}</p>
    <p class="site-footer__text">&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}</p>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "tagline",
      "label": "Tagline",
      "default": "ENGINEERED FOR COMPETITION"
    }
  ]
}
{% endschema %}
