<article class="vantor-card product-card">
  <a href="{{ card_product.url }}" class="product-card__media">
    {% if card_product.featured_image %}
      {{
        card_product.featured_image
        | image_url: width: 720
        | image_tag: class: 'product-card__main', widths: '360, 540, 720', sizes: '(min-width: 990px) 25vw, 50vw', loading: 'lazy'
      }}
    {% endif %}
    {% assign hover_media = card_product.media[1] %}
    {% if hover_media != blank %}
      {{
        hover_media
        | image_url: width: 720
        | image_tag: class: 'product-card__hover', widths: '360, 540, 720', sizes: '(min-width: 990px) 25vw, 50vw', loading: 'lazy'
      }}
    {% endif %}
  </a>

  <div class="product-card__info">
    <a class="product-card__title" href="{{ card_product.url }}">{{ card_product.title }}</a>
    <p class="product-card__price">{{ card_product.price | money }}</p>

    {% if show_quick_add and card_product.selected_or_first_available_variant %}
      <form data-quick-add data-variant-id="{{ card_product.selected_or_first_available_variant.id }}">
        <button class="vantor-btn vantor-btn--primary" type="submit">QUICK ADD</button>
      </form>
    {% endif %}
  </div>
</article>
